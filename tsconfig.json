{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6"
    ],
    "outDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "__tests__"
  ]
}